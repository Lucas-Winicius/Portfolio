// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model courses {
  id               Int      @id @default(autoincrement())
  courceName       String
  description      String
  institution      String?
  institutionImage String?
  conclusionDate   DateTime
  certificate      String?
}

model technologies {
  id       Int        @id @default(autoincrement())
  name     String
  image    String
  projects projects[]
}

model social {
  id    Int    @id @default(autoincrement())
  name  String
  image String
}

model projects {
  id           Int            @id @default(autoincrement())
  name         String
  description  String
  images       String[]
  githubLink   String
  projectLink  String?
  technologies technologies[]
}
