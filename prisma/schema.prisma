// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model technologies {
  id       Int        @id @default(autoincrement())
  name     String
  image    String
}

model social {
  id    Int    @id @default(autoincrement())
  name  String
  image String
}

model projects {
  id           Int            @id @default(autoincrement())
  name         String
  description  String
  images       String[]
  githubLink   String
  projectLink  String?
  hexCode      String         @unique
  visibility   Visibility     @default(VISIBLE)
  technologies String[]
}

model user {
  id        Int     @id @default(autoincrement())
  nick      String  @unique
  pass      String
  hex       String  @unique
  appetizer Int
  tempUser  Boolean
  uses      Int?
  role      Role    @default(TESTER)
}

enum Role {
  ADMIN
  TESTER
}

enum Visibility {
  INVISIBLE
  VISIBLE
}
