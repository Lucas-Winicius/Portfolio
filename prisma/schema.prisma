// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model technologies {
  id       Int        @id @default(autoincrement())
  name     String
  image    String
  projects projects[]
}

model social {
  id    Int    @id @default(autoincrement())
  name  String
  image String
}

model projects {
  id           Int            @id @default(autoincrement())
  name         String
  description  String
  images       String[]
  githubLink   String
  projectLink  String?
  technologies technologies[]
}

model user {
  id        Int     @id @default(autoincrement())
  nick      String
  pass      String
  appetizer Int
  tempUser  Boolean
  uses      Int?
}
